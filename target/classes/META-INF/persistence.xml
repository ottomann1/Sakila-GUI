<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
    <persistence-unit name="hibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>Business.Actor</class>
        <class>Business.Address</class>
        <class>Business.Category</class>
        <class>Business.City</class>
        <class>Business.Country</class>
        <class>Business.Customer</class>
        <class>Business.Film</class>
        <class>Business.FilmActor</class>
        <class>Business.FilmCategory</class>
        <class>Business.FilmText</class>
        <class>Business.Inventory</class>
        <class>Business.Language</class>
        <class>Business.Payment</class>
        <class>Business.Rental</class>
        <class>Business.Staff</class>
        <class>Business.Store</class>
        <class>Business.ActorInfo</class>
        <class>Business.CustomerList</class>
        <class>Business.FilmList</class>
        <class>Business.NicerButSlowerFilmList</class>
        <class>Business.SalesByFilmCategory</class>
        <class>Business.SalesByStore</class>
        <class>Business.StaffList</class>
        <class>Business.ActorInfo</class>
        <class>Business.CustomerList</class>
        <class>Business.FilmList</class>
        <class>Business.SalesByFilmCategory</class>
        <class>Business.SalesByStore</class>
        <class>Business.StaffList</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/upplevelse?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sakila"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
